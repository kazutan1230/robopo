{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignoreUnknown": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"linter": {
		"rules": {
			"all": true,
			"suspicious": {
				"noReactSpecificProps": "off"
			}
		}
	},
	"formatter": {
		"indentStyle": "space"
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"semicolons": "asNeeded",
			"indentStyle": "space"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		},
		"formatter": {
			"indentStyle": "space"
		}
	}
}
